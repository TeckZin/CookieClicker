<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cookieclicker.maincontroller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Goal to reach:" wrappingWidth="94.1640625" />

    <Label fx:id="goal" />

   <Label fx:id="goalReach"  />


   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Cookies Clicked" />

    <Label fx:id="welcomeText" />
    <Button onAction="#onCookieButtonClick" text="Generate more cookies" />
   <Button onAction="#onResetButtonClick" text="Reset Goal" />
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Random Limit" textAlignment="CENTER" wrappingWidth="112.93359375" />
    <Label fx:id="randomLimit" />
   <ButtonBar prefHeight="0.0" prefWidth="84.0">
     <buttons>
         <Button minWidth="0.0" mnemonicParsing="false" onAction="#minusGoalButton" prefHeight="25.0" prefWidth="146.0" text="-" />
       <Button minWidth="0.0" mnemonicParsing="false" onAction="#plusGoalButton" prefHeight="25.0" prefWidth="146.0" text="+" />
     </buttons>


      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <cursor>
         <Cursor fx:constant="DEFAULT" />
      </cursor>
   </ButtonBar>
   <ButtonBar />
</VBox>
